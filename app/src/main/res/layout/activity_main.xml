<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/guessNumberPrompt_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blackcurrant_light"
        android:padding="10dp"
        android:text="Choose Your Game!"
        android:textAlignment="center"
        android:textColor="@color/Concrete_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/guessNumberPrompt_textview">

        <Button
            android:id="@+id/numbersGame_button"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="5dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Numbers Game" />

        <Button
            android:id="@+id/phraseGame_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="5dp"
            android:textAllCaps="false"
            android:text="Phrase Game" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>